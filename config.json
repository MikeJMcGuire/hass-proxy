{
  "name": "NGINX Home Assistant SSL Proxy",
  "version": "0.1",
  "slug": "hass-proxy",
  "description": "An SSL/TLS proxy for external access to Home Assistant.",
  "url": "https://github.com/MikeJMcGuire/hass-proxy",
  "startup": "application",
  "boot": "auto",
  "ports": {
    "443/tcp": 443
   },
  "map": ["ssl", "share"],
  "options": {
    "domain": "fqdn.com",
    "certfile": "cert.pem",
    "keyfile": "key.pem"
  },
  "schema": {
    "domain": "str",
    "certfile": "str",
    "keyfile": "str"
  }
}
